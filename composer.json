{
    "name": "dorpmaster/nats",
    "type": "project",
    "description": "Asynchronous client for NATS server.",
    "keywords": [
        "amp",
        "amphp",
        "async",
        "client",
        "nats",
        "revolt"
    ],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Dorpmaster\\Nats\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dorpmaster\\Nats\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Roman A. Shvetsov",
            "email": "tcpu6000@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.3",
        "amphp/amp": "^3.0",
        "amphp/byte-stream": "^2.1",
        "amphp/socket": "^2.3",
        "amphp/log": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.3"
    },
    "scripts": {
        "phpunit": [
            "php -d pcov.enabled=1 -d memory_limit=-1 vendor/bin/phpunit --configuration phpunit.xml --testsuite Unit"
        ]
    }
}
